<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="2dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorBackLight"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_car_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/audir8" />

        <TextView
            android:id="@+id/text_view_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/image_view_car_pic"
            android:layout_alignStart="@id/image_view_car_pic"
            android:layout_below="@id/image_view_car_pic"
            android:layout_marginTop="5dp"
            android:text="@string/model"
            android:textAllCaps="true"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_car_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/image_view_car_pic"
            android:layout_alignRight="@id/image_view_car_pic"
            android:layout_below="@id/image_view_car_pic"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/view_detail"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>